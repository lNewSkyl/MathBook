<h1>Tasks</h1>
Our app has <%= Article.count %> tasks!&ensp;&ensp;&ensp;&ensp;
<div class="d-grid gap-2">
  <a href="<%= new_article_path %>" class="btn btn-outline-success btn-lg" role="button" align="right">Create new task!</a>
</div>
<br>
<ul class="pagination justify-content-center">
  <div class="flickr_pagination" align="center">
    <%= will_paginate @articles_pag_date %>
  </div>
</ul>
<div class="container">
  <div class="row align-items-md-stretch">
    <div class="col-md-6"><h3>Last added:</h3>
      <% @articles_pag_date.each  do |article| %>
        <hr />
        <div class="card">
          <div class="d-flex position-relative">
            <div class="object-fit_cover">
              <% if article.avatar.attached? %>
              <p><%= image_tag article.avatar, class:"flex-shrink-0 me-3", width:"160px" %></p>
              <% else %>
                <%= image_tag ("Logo.png"), class:"flex-shrink-0 me-3", width:"160px"%>
              <% end %>
            </div>
            <div>
              <div class="truncate-title">
                <h5 class="mt-0"><%= article.title %></h5>
              </div>
              <small class="text-muted"><%= article.description %></small>
              <div class="truncate-body">
                <%= article.body %>
              </div>
              <p class="timestamp text-muted" >Posted <%= time_ago_in_words(article.created_at) %> ago.></p>
              <a class="stretched-link"href:<%= link_to "", article %> </a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-6"><h3>Top rated:</h3>
      <% @articles_pag_rate.each  do |article|  %>
        <hr />
        <div class="card">
          <div class="d-flex position-relative">
            <div class="object-fit_cover">
              <% if article.avatar.attached? %>
              <p><%= image_tag article.avatar, class:"flex-shrink-0 me-3", width:"160px" %></p>
              <% else %>
                <%= image_tag ("Logo.png"), class:"flex-shrink-0 me-3", width:"160px"%>
              <% end %>
            </div>
            <div>
              <div class="truncate-title">
                <h5 class="mt-0"><%= article.title %></h5>
              </div>
              <small class="text-muted"><%= article.description %></small>
              <div class="truncate-body">
                <%= article.body %>
              </div>
              <p class="timestamp text-muted" >Posted <%= time_ago_in_words(article.created_at) %> ago.></p>
              <a class="stretched-link"href:<%= link_to "", article %> </a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<ul class="pagination justify-content-center">
  <div class="flickr_pagination" align="center">
    <%= will_paginate @articles_pag_date %>
  </div>
</ul>







